<h1>Posts#index</h1>
<ul>
    <li><%= link_to "Create", new_post_path %></li>
</ul>
<% @posts.each do |post| %>
<h2><%= post.title %></h2>
<p>
    <%=raw post.content %>
</p>

<ul>
	<li><%= link_to "View", post_path(post) %></li>
	<li><%= link_to "Edit", edit_post_path(post) %></li>
	<li><%= link_to "Delete", post_path(post), :method => :delete %></li>	
</ul>

<% end %>