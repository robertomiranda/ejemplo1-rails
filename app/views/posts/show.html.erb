<h1>Posts#show</h1>
<h2><%= @post.title %></h2>
<p>
    <%=raw @post.content %>
</p>

<ul>
	<li><%= link_to "Edit", edit_post_path(@post) %></li>
	<li><%= link_to "Delete", post_path(@post), :method => :delete %></li>	
</ul>

<h3>Comments<h3>
<%for comment in @comments%>
<p><%= comment.author%></p>
<p><%= comment.content%></p>
<%end%>

